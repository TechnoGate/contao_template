source 'http://rubygems.org'

group :development do
  # Contao integration
  gem 'contao'

  # Compass plugins
  gem 'compass-h5bp'

  # Jasmine
  gem 'jasmine'

  # For Execjs, therubyracer is based on libV8
  gem 'therubyracer'

  # Deploy with Capistrano
  gem 'capistrano-exts', '~> 1.14.1', require: false

  group :local_dev do
    gem 'rb-fsevent', require: false
    gem 'rb-inotify', require: false
  end
end
